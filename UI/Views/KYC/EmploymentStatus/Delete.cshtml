@using UI.Models.KYC
@model EmploymentStatus

<h2 class="mb-5 mt-5">Delete Employment Status</h2>
<div>
    <h3 class="mb-3 mt-3">Are you sure you want to delete this?</h3>
    <p><strong>Status:</strong> @Model.Status</p>
    <p><strong>Arabic Status:</strong> @Model.ArabicStatus</p>
    @using (Html.BeginForm("Delete", "EmploymentStatus", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    }
</div>

