@model UI.Models.KYC.Country

<h2 class="mb-5 mt-5">Create Country</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group mb-4">
        @Html.LabelFor(m => m.Name, "Country Name")
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
    </div>
    <div class="form-group mb-4">
        @Html.LabelFor(m => m.ArabicName, "Arabic Country Name")
        @Html.TextBoxFor(m => m.ArabicName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ArabicName, null, new { @class = "text-danger" })
    </div>
    <div class="form-group mb-4">
        @Html.LabelFor(m => m.Code, "Country Code")
        @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Code, null, new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-success">Create</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
}

