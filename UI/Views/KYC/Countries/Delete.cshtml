@model UI.Models.KYC.Country

<h2 class="mb-5 mt-5">Delete Country</h2>
<div>
    <h3 class="mb-3 mt-3">Are you sure you want to delete this?</h3>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Arabic Name:</strong> @Model.ArabicName</p>
    <p><strong>Code:</strong> @Model.Code</p>
</div>
@using (Html.BeginForm("Delete", "Countries", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
}

