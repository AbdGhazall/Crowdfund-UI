@model IEnumerable<UI.Models.KYC.Country>

<h2 class="text-center mb-5 mt-5">Countries</h2>

<div class="row mb-5">
    <div class="col">
        <a href="@Url.Action("Create")" class="btn btn-primary">Create New</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Arabic Name</th>
            <th>Code</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var country in Model)
        {
            <tr>
                <td>@country.Id</td>
                <td>@country.Name</td>
                <td>@country.ArabicName</td>
                <td>@country.Code</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = country.Id })" class="btn btn-primary btn-sm"><i class="fas fa-edit"></i></a>
                    <a href="@Url.Action("Delete", new { id = country.Id })" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
