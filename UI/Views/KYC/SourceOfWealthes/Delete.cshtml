@using UI.Models.KYC
@model SourceOfWealth

<h2 class="mb-5 mt-5">Delete Source of Wealth</h2>
<div>
    <h3 class="mb-3 mt-3">Are you sure you want to delete this?</h3>
    <p><strong>Source:</strong> @Model.Source</p>
    <p><strong>Arabic Source:</strong> @Model.ArabicSource</p>
    @using (Html.BeginForm("Delete", "SourceOfWealthes", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    }
</div>

