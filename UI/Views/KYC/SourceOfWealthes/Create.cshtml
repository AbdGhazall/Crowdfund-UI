@using UI.Models.KYC
@model SourceOfWealth

<h2 class="mb-5 mt-5">Create Source of Wealth</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group mb-4">
        @Html.LabelFor(m => m.Source, "Source")
        @Html.TextBoxFor(m => m.Source, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Source, null, new { @class = "text-danger" })
    </div>
    <div class="form-group mb-4">
        @Html.LabelFor(m => m.ArabicSource, "Arabic Source")
        @Html.TextBoxFor(m => m.ArabicSource, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ArabicSource, null, new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-success">Create</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
}
