@model UI.Models.KYC.ExpectedTransactionPerMonthRange

<h2 class="mb-5 mt-5">Delete Expected Transaction Per Month Range</h2>

<div>
    <h3 class="mb-3 mt-3">Are you sure you want to delete this?</h3>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Arabic Description:</strong> @Model.ArabicDescription</p>

    @using (Html.BeginForm("Delete", "ExpectedTransactionPerMonthRanges", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    }

