@using UI.Models.KYC
@model EducationLevel

<h2 class="mb-5 mt-5">Delete Education Level</h2>
<div>
    <h3 class="mb-3 mt-3">Are you sure you want to delete this?</h3>
    <p><strong>Level:</strong> @Model.Level</p>
    <p><strong>Arabic Level:</strong> @Model.ArabicLevel</p>
    @using (Html.BeginForm("Delete", "EducationLevels", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    }
</div>

