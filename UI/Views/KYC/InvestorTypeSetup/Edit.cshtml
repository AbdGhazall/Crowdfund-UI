@using UI.Models.KYC
@model InvestorTypeSetup

<h2 class="mb-5 mt-5">Edit Investor Type Setup</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.InvestorType)

    <div class="form-group mb-4">
        @Html.LabelFor(m => m.InvestorType, "Investor Type")
        @Html.TextBoxFor(m => m.InvestorType, new { @class = "form-control", @readonly = "readonly" })
        @Html.ValidationMessageFor(m => m.InvestorType, null, new { @class = "text-danger" })
    </div>
    <div class="form-group mb-4">
        @Html.LabelFor(m => m.Description, "Description")
        @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Description, null, new { @class = "text-danger" })
    </div>
    <div class="form-group mb-4">
        @Html.LabelFor(m => m.ArabicDescription, "Arabic Description")
        @Html.TextBoxFor(m => m.ArabicDescription, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ArabicDescription, null, new { @class = "text-danger" })
    </div>
    <div class="form-group mb-4">
        @Html.LabelFor(m => m.MaxPerOrder, "Max Per Order")
        @Html.TextBoxFor(m => m.MaxPerOrder, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MaxPerOrder, null, new { @class = "text-danger" })
    </div>
    <div class="form-group mb-4">
        @Html.LabelFor(m => m.MaxPerPeriod, "Max Per Period")
        @Html.TextBoxFor(m => m.MaxPerPeriod, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MaxPerPeriod, null, new { @class = "text-danger" })
    </div>
    <div class="form-group mb-4">
        @Html.LabelFor(m => m.PeriodInMonths, "Period (Months)")
        @Html.TextBoxFor(m => m.PeriodInMonths, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.PeriodInMonths, null, new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
}
