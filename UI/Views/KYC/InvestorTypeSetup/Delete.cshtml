@using UI.Models.KYC
@model InvestorTypeSetup

<h2 class="mb-5 mt-5">Delete Investor Type Setup</h2>
<div>
    <h3>Are you sure you want to delete this?</h3>
    <p><strong>Investor Type:</strong> @Model.InvestorType</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Arabic Description:</strong> @Model.ArabicDescription</p>
    @using (Html.BeginForm("Delete", "InvestorTypeSetup", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.InvestorType)
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    }
</div>

