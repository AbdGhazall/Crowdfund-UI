@using UI.Models.KYC
@model StrategyCode

<h2 class ="mb-5 mt-5"> Edit Strategy Code</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group  mb-4">
        @Html.HiddenFor(m => m.Id)
        @Html.LabelFor(m => m.Description, "Description")
        @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Description , null, new { @class = "text-danger" })
    </div>
    <div class="form-group  mb-4">
        @Html.LabelFor(m => m.ArabicDescription, "Arabic Description")
        @Html.TextBoxFor(m => m.ArabicDescription, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ArabicDescription, null, new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
}

